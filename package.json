{
  "name": "root",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/punchcard/shapes"
  },
  "bugs": "https://github.com/punchcard/shapes",
  "workspaces": [
    "packages/@shapes/*"
  ],
  "scripts": {
    "bootstrap": "yarn && yarn lerna bootstrap",
    "lint": "eslint 'packages/**/*' --fix",
    "build": "tsc -b",
    "watch": "tsc -w",
    "ex": "ts-node -P tsconfig.dev.json",
    "test": "jest --coverage",
    "build:reference": "typedoc",
    "commit:reference": "git add docs/reference && git commit -m \"docs: rebuild API reference\""
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sort-class-members": "^1.7.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.4",
    "eslint-plugin-tsdoc": "^0.2.5",
    "eslint-plugin-typescript-sort-keys": "^1.2.0",
    "eslint-plugin-unicorn": "^20.1.0",
    "exitzero": "^1.0.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.7",
    "typedoc-plugin-markdown": "^2.3.1",
    "typescript": "^3.9.5"
  },
  "jest": {
    "cache": false,
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "tsConfig": "tsconfig.dev.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.tsx"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "verbose": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint && yarn test && yarn build:reference && exitzero yarn commit:reference",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
