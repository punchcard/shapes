{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@shapes/*"
  ],
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "eslint": "^7.2.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sort-class-members": "^1.7.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.4",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-tsdoc": "^0.2.5",
    "eslint-plugin-typescript-sort-keys": "^1.2.0",
    "eslint-plugin-unicorn": "^20.1.0",
    "jest": "^26.0.1",
    "lerna": "^3.22.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.7",
    "typedoc-plugin-markdown": "^2.3.1",
    "typescript": "^3.9.5"
  },
  "jest": {
    "cache": false,
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "tsConfig": "tsconfig.dev.json"
      }
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "verbose": false
  },
  "scripts": {
    "bootstrap": "yarn && yarn lerna bootstrap",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:lib": "find . -name 'lib' -type d -prune -exec rm -rf '{}' +",
    "clean": "yarn clean:node_modules & yarn clean:lib",
    "build": "tsc -b",
    "ex": "ts-node -P tsconfig.dev.json",
    "test": "jest --coverage",
    "build:reference": "typedoc",
    "commit:reference": "git add docs/reference && git commit -m \"docs: rebuild API reference\""
  }
}
