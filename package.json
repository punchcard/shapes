{
  "name": "root",
  "license": "Apache-2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/punchcard/shapes"
  },
  "bugs": "https://github.com/punchcard/shapes",
  "workspaces": [
    "packages/@shapes/*"
  ],
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build": "tsc -b",
    "watch": "tsc -w",
    "clean": "rm -rf node_modules && lerna run clean --parallel",
    "test": "jest",
    "format": "prettier --write . --ignore=**/{build,dist,generated,lib,node_modules} --loglevel=error",
    "update-all-deps": "ncu -u && lerna exec ncu -- -u && lerna clean -y && rm -rf node_modules && npm i"
  },
  "devDependencies": {
    "@jest/types": "^26.6.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.0",
    "@types/sinon": "10.0.0",
    "@types/source-map-support": "^0.5.3",
    "chokidar-cli": "^2.1.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "npm-check-updates": "^11.5.13",
    "prettier": "^2.3.0",
    "sinon": "^10.0.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
